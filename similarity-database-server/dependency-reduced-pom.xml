<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <artifactId>vectorization</artifactId>
    <groupId>com.vectorization</groupId>
    <version>0.0.4</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <artifactId>vectorization-server</artifactId>
  <name>Vectorization Database Daemon</name>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>2.3</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <transformers>
                <transformer>
                  <mainClass>com.vectorization.server.Server</mainClass>
                </transformer>
              </transformers>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <profiles>
    <profile>
      <id>staging</id>
      <build>
        <resources>
          <resource>
            <filtering>true</filtering>
            <directory>/home/rgm/workspace/Java/Vectorization/vectorization/similarity-database-server/src/main/resources</directory>
          </resource>
        </resources>
      </build>
      <dependencies>
        <dependency>
          <groupId>org.apache.derby</groupId>
          <artifactId>derby</artifactId>
          <version>10.11.1.1</version>
          <scope>compile</scope>
        </dependency>
      </dependencies>
      <properties>
        <jdbc.url>jdbc:derby://localhost:1527/shiro_schema</jdbc.url>
        <jdbc.passwd>APP</jdbc.passwd>
        <jdbc.driver>org.apache.derby.jdbc.EmbeddedDriver</jdbc.driver>
        <jdbc.user>APP</jdbc.user>
      </properties>
    </profile>
  </profiles>
</project>

